       }

ps-settings =
    element ps-settings {
      attribute noembed-font { xsd:boolean }
    }

inx-settings =
    element inx-settings {
       attribute block-newline { xsd:boolean }?,
       attribute output-mode { xsd:NCName }
     }
mathml-settings =
