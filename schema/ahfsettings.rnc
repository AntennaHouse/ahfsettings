text-settings =
     element text-settings { empty }
     
xslt-settings =
     element xslt-settings {
         attribute command { text }?,
         attribute msxml { xsd:boolean },
         attribute param-option { text }?,
         element param {
           attribute name { xsd:NCName },
           attribute value { xsd:anyURI }
         }?
       }

